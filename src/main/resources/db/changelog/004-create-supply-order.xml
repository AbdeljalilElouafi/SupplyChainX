<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="4" author="your-name">
        <createTable tableName="supply_order">
            <column name="id_order" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_supply_order_supplier" references="supplier(id_supplier)"/>
            </column>
            <column name="order_date" type="DATE"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>

        <!-- Join table for SupplyOrder <-> RawMaterial -->
        <createTable tableName="supply_order_material">
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_supply_order_material_order" references="supply_order(id_order)"/>
            </column>
            <column name="material_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_supply_order_material_material" references="raw_material(id_material)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
