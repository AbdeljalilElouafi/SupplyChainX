@startuml
title Flashcards Learning & Peer Study Platform - Class Diagram

' ======================
' Abstract & Base Classes
' ======================
abstract class User {
  - userId : int
  - username : String
  - email : String
  - password : String
  - role : String
  + login()
  + logout()
}

class Profile {
  - profileId : int
  - subjects : List<String>
  - skillLevel : String
  - learningStyle : String
  - availability : String
  + updateProfile()
}

class Learner extends User {
  + createNote()
  + requestPeer(Learner)
  + blockUser(Learner)
}

class Admin extends User {
  + manageUsers()
  + viewReports()
  + viewStats()
}

' ======================
' Study & Matching
' ======================
class MatchRequest {
  - requestId : int
  - sender : Learner
  - receiver : Learner
  - status : String
  - dateSent : Date
  + accept()
  + reject()
}

class Exchange {
  - exchangeId : int
  - offered : String
  - requested : String
}

class StudySession {
  - sessionId : int
  - date : Date
  - topic : String
  - status : String
  + schedule()
  + cancel()
}

class Notification {
  - notificationId : int
  - message : String
  - dateSent : Date
  - isRead : boolean
}

' ======================
' Learning Content
' ======================
class Flashcard {
  - flashcardId : int
  - question : String
  - answer : String
  - subject : String
  + review()
}

class Quiz {
  - quizId : int
  - questions : List<String>
  - score : double
  + takeQuiz()
}

class Documentation {
  - docId : int
  - title : String
  - content : String
  - subject : String
  + read()
}

class Stats {
  - totalStudyHours : int
  - completedTopics : int
  - rating : double
  + updateStats()
}

' ======================
' AI Services
' ======================
class AIService {
  + generateFlashcards(subject : String)
  + createQuiz(subject : String)
  + createDocumentation(subject : String)
  + validateSubject(subject : String)
}

class Note {
  - noteId
  - content
  - date
}
class SessionNote {
  - SessionNoteId
  - content
  - date
}

' ======================
' Relationships
' ======================
User "1" -- "1" Profile
Learner "1" -- "1" Exchange
Learner "1" -- "*" Flashcard
Learner "1" -- "*" Quiz
Learner "1" -- "*" Documentation
Learner "*" -- "*" StudySession
Learner "1" -- "*" MatchRequest : sends/receives >
StudySession "1" -- "*" Notification
Admin "1" -- "*" User : manages >
AIService "1" -- "*" Flashcard : generates >
AIService "1" -- "*" Quiz : generates >
AIService "1" -- "*" Documentation : generates >
AIService "1" -- "*" MatchRequest : validates subject >
Learner "1" -- "1" Stats
Note "*" -- "1" Learner
SessionNote "*" -- "1" StudySession

@enduml
