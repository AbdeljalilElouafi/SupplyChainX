@startuml
title SupplyChainX - Use Case Diagram

actor "ADMIN" as Admin
actor "GESTIONNAIRE_APPROVISIONNEMENT" as GA
actor "RESPONSABLE_ACHATS" as RA
actor "SUPERVISEUR_LOGISTIQUE" as SL
actor "CHEF_PRODUCTION" as CP
actor "PLANIFICATEUR" as PL
actor "SUPERVISEUR_PRODUCTION" as SP
actor "GESTIONNAIRE_COMMERCIAL" as GC
actor "RESPONSABLE_LOGISTIQUE" as RL
actor "SUPERVISEUR_LIVRAISONS" as SV

rectangle "SupplyChainX System" {
  package "Administration" {
    usecase "Créer utilisateur" as UC1
    usecase "Modifier rôle utilisateur" as UC2
  }

  package "Approvisionnement" {
    usecase "Gérer Fournisseurs" as UC3
    usecase "Gérer Matières Premières" as UC4
    usecase "Gérer Commandes d'Approvisionnement" as UC5
  }

  package "Production" {
    usecase "Gérer Produits Finis" as UC6
    usecase "Gérer Ordres de Production" as UC7
    usecase "Planification / Ordonnancement" as UC8
  }

  package "Livraison & Distribution" {
    usecase "Gérer Clients" as UC9
    usecase "Gérer Commandes Clients" as UC10
    usecase "Gérer Livraisons" as UC11
  }
}

